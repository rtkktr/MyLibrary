<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Book Detail - Your Book Library</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>

    <!-- Header -->
    <header class="bg-light p-3">
        <div class="container">
            <div class="row">
                <!-- Logo and Search Items (Left) -->
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <img src="your_logo.png" alt="Your Library Logo" class="img-fluid">
                        <!-- Search Items -->
                        <div class="input-group ml-3">
                            <input type="text" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Login/Sign In/Sign Up (Right) -->
                <div class="col-md-6 text-right">
                    <a href="#" class="btn btn-outline-primary">Login</a>
                    <a href="#" class="btn btn-outline-primary ml-2">Sign Up</a>
                </div>
            </div>
        </div>
    </header>

    <%- body %>

    <!-- Footer -->
    <footer class="bg-light p-3 mt-4">
        <div class="container">
            <p class="text-center">&copy; 2024 Your Book Library</p>
        </div>
    </footer>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>

</html>
